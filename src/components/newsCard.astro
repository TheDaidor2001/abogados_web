---
import ArrowRigth from "./icons/ArrowRigth.astro";

interface Props {
    imageSrc: string;
    date: string;
    title: string;
    link: string;
}

const { date, imageSrc, link, title } = Astro.props;
---

<article>
    <img src={imageSrc} alt="" class="w-full h-72 object-cover rounded-lg" />
    <div>
        <p class="text-gray-700 mt-8">{date}</p>
        <a
            href="#"
            class="font-bold text-lg inline-block mt-3 hover:text-blue-600 transition-colors font-heebo"
            >{title}</a
        >
        <a
            href={link}
            class="inline-flex mt-5 bg-blue-600 w-fit px-3 py-1 text-white rounded-md items-center gap-x-3 font-heebo hover:scale-105 transition-all"
        >
            <span>Leer m√°s</span>
            <ArrowRigth className="size-5" />
        </a>
    </div>
</article>
