---
interface Props {
    className: string;
    link: string;
    linkText: string;
}

const { className, link, linkText } = Astro.props;
---

<li class=`group text-gray-900 w-full md:w-auto ${className}`>
    <a
        href={link}
        class="block py-2 px-3 rounded md:bg-transparent md:p-0"
        aria-current="page">{linkText}</a
    >
    <div
        class=`bg-blue-700 w-0 h-[1px] group-hover:w-full transition-all duration-300 `
    >
    </div>
</li>
