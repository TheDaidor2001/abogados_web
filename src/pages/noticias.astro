---
import Calendar from "../components/icons/Calendar.astro";
import Layout from "../layouts/Layout.astro";
import NoticiasSection from "../components/noticias/Noticias.vue";
import Videos from "../components/noticias/Videos.vue";
---

<Layout>
    <section class="max-w-7xl mx-auto pt-10 pb-20">
        <h5
            class="text-center text-gray-700 text-sm md:text-lg uppercase font-heebo"
        >
            Últimas noticias
        </h5>
        <h1
            class="text-center text-lg px-2 md:text-3xl font-heebo font-semibold uppercase w-full md:w-2/3 mx-auto"
        >
            Descubre <span class="text-blue-500 font-bold"
                >actividades, proyectos, y logros</span
            > que están marcando la diferencia.
        </h1>

        <article
            class="grid grid-cols-1 md:grid-cols-2 items-end justify-center mt-10 gap-10 px-5 md:px-0"
        >
            <img
                class="w-full h-96 object-cover object-top rounded-lg"
                src="/img/prueba.webp"
                alt=""
            />

            <div>
                <span
                    class="bg-blue-500 px-5 py-2 text-xs rounded-lg text-white font-semibold"
                >
                    Última noticia
                </span>
                <h3
                    class="text-xl md:text-3xl font-semibold font-heebo text-gray-900 mt-10"
                >
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                    Voluptates, assumenda!
                </h3>

                <p class="mt-5 text-gray-700 text-sm md: text-md">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab
                    fuga blanditiis debitis quidem reiciendis, alias voluptates
                    impedit sunt nulla nihil recusandae vero distinctio,
                    consequatur, culpa dolorum quaerat beatae labore
                    temporibus?...
                </p>
                <div class="flex items-center gap-x-3 mt-5">
                    <Calendar className="size-6 text-gray-700" />
                    <p class="text-lg font-semibold mt-1 text-gray-700">
                        20/1/2025
                    </p>
                </div>
                <a
                    href="#"
                    class="block mt-10 bg-blue-500 py-2 text-center text-white rounded-md"
                    >Leer la noticia</a
                >
            </div>
        </article>
    </section>

    <section class="max-w-7xl mx-auto">
        <h2
            class="text-3xl font-heebo my-10 uppercase font-semibold text-gray-900 text-center xl:text-left"
        >
            Más noticias
        </h2>
        <NoticiasSection client:only />
    </section>
    <section class="max-w-7xl mx-auto">
        <h2
            class="text-3xl font-heebo my-10 uppercase font-semibold text-gray-900 text-center xl:text-left"
        >
            Nuestros videos
        </h2>
        <Videos client:only />
    </section>
</Layout>
